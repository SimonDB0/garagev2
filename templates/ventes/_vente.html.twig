{% set url = path("ventes_show",{'slug':voiture.slug}) %}
<div class="col-md-4 bg-white mt-5 mb-5 ">
                <div class="card card-car bg-white  mb-3">
                    <div class="card-header bg-white text-center">
                   
                        
                        <h3>{{voiture.Marque.nom}}</h3>
                            
                    
                        
                    </div>
                    <img src="images/coverimg/{{voiture.coverImg}}" class="rounded mx-auto d-block bg-white" width="350" height="200" alt="Image de l'voiture" class="starsimg">
                    <div class="card-body bg-white">
                        <div class="card-title text-center bg-white">
                            modele : <h4>{{voiture.modele}}</h4>
                        </div>
                        <p class="card-tex bg-white ">
                            <p>-</strong>{{voiture.km}} km</p>
                            <p>-Puissance : {{voiture.puissance}} CH</p>
                            <p>-Carburant : {{voiture.carburant}}</p>
                            <p>-Année : {{voiture.anneeCirculation | date('d/m/Y')}}</p>
                            <p>-Prix : {{voiture.prix}} €</p>
                        </p>
                        <div class="text-center">
                        <a href="{{url}}" class="btn btn-secondary">Découvrir la voiture</a>
                        </div>
                    </div>
                </div>
